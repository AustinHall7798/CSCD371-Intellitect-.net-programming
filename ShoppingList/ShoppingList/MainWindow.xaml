<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Topmost="True"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"   
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        mc:Ignorable="d"
        MinHeight="400"
        MinWidth="0"
        Title="Shopping List" Height="500" Width="300">
    <Window.Resources>
        <local:VisibilityConverter x:Key="VisibilityConverter"/>
    </Window.Resources>
    <Grid Background="Turquoise">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="212*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <ListBox x:Name="ShoppingList"
            ItemsSource="{Binding ItemsList}"
                 SelectedItem="{Binding SelectedItem}"
                 Grid.RowSpan="1" 
                 Background="Turquoise"
                 SelectionMode="Single" 
                 Foreground="#FFC75050" 
                 FontFamily="Impact" 
                 Grid.ColumnSpan="2" 
                 FontSize="20" BorderThickness="2,2,2,2" >

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Add Item" 
                    Command="{Binding AddItem}"
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Bottom" 
                    Height= "30" 
                    BorderThickness="0,1,1,1" 
                    Cursor="Hand" 
                    Background="#FF87D4ED" 
                    FontSize="12" 
                    FontFamily="Arial Black"
                    Width="Auto" 
                    />

        <Button Content="Delete Item" 
                    Command="{Binding DeleteItem}"
                    HorizontalAlignment="Stretch" 
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Bottom" 
                    Height= "30"  
                    BorderThickness="0,1,1,1" 
                    Cursor="Hand" 
                    Background="#FFF3A5FF" 
                    FontSize="12" 
                    FontFamily="Arial Black" 
                    Width="Auto" />

        <Button Content="Edit Item" 
                    Command="{Binding EditItem}"
                    x:Name="EditButton"
                    Visibility="{Binding SelectedItem, Converter= {StaticResource VisibilityConverter}}"
                    HorizontalAlignment="Stretch" 
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Bottom" 
                    Height= "30"  
                    BorderThickness="0,1,1,1" 
                    Cursor="Hand" 
                    Background="#FFD759EB" 
                    FontSize="12" 
                    FontFamily="Arial Black" 
                    Width="Auto" />

        <TextBox Text="{Binding SelectedItem.Name}"
            Visibility="{Binding SelectedItem, Converter= {StaticResource VisibilityConverter}}"
                 Panel.ZIndex="2"
                 Grid.Row="2"
                 Grid.Column="0"
                 Height="30" 
                 FontSize="17" 
                 Grid.ColumnSpan="2" Background="White">
        </TextBox>

        <TextBox Text="{Binding NewItem}"
                 AcceptsReturn="True"
                 x:Name="ShoppingListTextBox"
                 Grid.Row="2"
                 Grid.Column="0"
                 Height="30" 
                 FontSize="17" 
                 Grid.ColumnSpan="2" Background="White">
        </TextBox>
    </Grid>
</Window>